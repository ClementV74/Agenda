<UserControl x:Class="calendrier2.view.view_reglageBDD"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:calendrier2.view"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="AliceBlue" x:Name="Ecran">
        <StackPanel Margin="20">
            <TextBlock Text="Hôte:"/>
            <TextBox x:Name="TB_Host" Margin="0 5"/>
            
            <TextBlock Text="Nom d'utilisateur:"/>
            <TextBox x:Name="TB_User" Margin="0 5"/>
            <TextBlock Text="Mot de passe:"/>
            <TextBox x:Name="TB_Password" Margin="0 5"  />
            <TextBlock Text="Nom de la base de données:"/>
            <TextBox x:Name="TB_Database" Margin="0 5" />
            <Button Content="Enregistrer" Click="BTN_Save_Click" HorizontalAlignment="Center" Style="{StaticResource addButton}" />
        </StackPanel>
    </Grid>
</UserControl>
